@model List<WeatherRecord>

@if (Model == null || !Model.Any())
{
    <p>No data found for selected period or location</p>
}
else
{
    <h2 class="mb-4 text-primary">Weather in @Model.FirstOrDefault()?.City</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="card shadow-sm border-0 h-100">
                    <div class="card-body">
                        <h5 class="card-title">@item.Date.ToString("yyyy-MM-dd")</h5>
                        <p class="card-text mb-1">
                            <strong>Max:</strong> @item.MaxTemperature&nbsp;°C
                        </p>
                        <p class="card-text mb-1">
                            <strong>Min:</strong> @item.MinTemperature&nbsp;°C
                        </p>
                        <p class="card-text mb-0">
                            <strong>Avg:</strong> @item.AverageTemperature&nbsp;°C
                        </p>
                    </div>
                </div>
            </div>
        }
    </div>




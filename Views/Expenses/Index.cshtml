@model IEnumerable<FlightCast.Models.Expense>

<h2>My expenses</h2>
<div class="container">
    <table class="table table-bordered">
        <thead class="table dark">
            <tr>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model){
                    <tr>
                        <td>@item.Description</td>
                        <td>@item.Amount</td>
                        <td>@item.Category</td>
                        <td>@item.Date.ToString("yyyyy-MM-dd")</td>
                    </tr>
                }
        </tbody>
    </table>
</div>
